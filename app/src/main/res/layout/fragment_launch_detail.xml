<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/launch_detail_ImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        fresco:placeholderImage="@drawable/gray_placeholder"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/launch_detail_date_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_below="@+id/launch_detail_ImageView"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/launch_detail_state_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16dp"
        android:layout_below="@+id/launch_detail_date_TextView"/>

    <View
        android:id="@+id/divider_View"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/launch_detail_state_TextView"
        android:layout_marginTop="10dp"
        android:background="@color/dividerColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider_View"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/launch_site_TextView"
                style="@style/AppTheme.ListItemText"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/dividerColor" />

            <TextView
                android:id="@+id/rocket_info_TextView"
                style="@style/AppTheme.ListItemText"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/dividerColor" />

            <TextView
                android:id="@+id/launch_detail_TextView"
                style="@style/AppTheme.ListItemText"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/dividerColor" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>